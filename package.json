{
  "name": "afpl",
  "version": "0.12.0",
  "description": "A Functional Programming Library",
  "scripts": {
    "build": "npm run -s clean; npm run -s build:src; npm run -s build:package",
    "clean": "rm -R lib/*",
    "build:src": "./node_modules/.bin/tsc -p src",
    "build:package": "cp --remove-destination package.json lib/package.json",
    "dist": "npm run build && cd lib && npm publish",
    "test": "./node_modules/.bin/mocha --opts mocha.opts test"
  },
  "author": "Lasana Murray <dev@quenk.com> (http://quenk.com)",
  "license": "Apache-2.0",
  "main": "lib",
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.0.26",
    "mocha": "^3.3.0",
    "must": "^0.13.4",
    "ts-node": "^3.0.3",
    "typescript": "^2.4.2"
  }
}
